<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.spgroup.spapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".SPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/sp_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullScreenActivity">

        <!-- HomeActivity -->
        <activity
            android:name=".presentation.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ParnerDetailsActivity -->
        <activity
            android:name=".presentation.activity.HomeActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- ParnerDetailsActivity -->
        <activity
            android:name=".presentation.activity.PartnerDetailsActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- OrderSummaryActivity -->
        <activity
            android:name=".presentation.activity.OrderSummaryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <!-- PartnerInformationActivity -->
        <activity
            android:name=".presentation.activity.PartnerInformationActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--ConfirmationActivity-->
        <activity
            android:name=".presentation.activity.AcknowledgementActivity"
            android:screenOrientation="portrait"
            >
        </activity>

        <!--PartnerListingActivity-->
        <activity
            android:name=".presentation.activity.PartnerListingActivity"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity
            android:name=".presentation.activity.PdfActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.activity.EmptyRequestActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.activity.PageActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.activity.CustomiseNewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            />

        <activity
            android:name=".presentation.activity.UpdateActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.activity.OnBoardingActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.activity.NoInternetActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".presentation.activity.FileNotFoundActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.activity.ApiErrorActivity"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>