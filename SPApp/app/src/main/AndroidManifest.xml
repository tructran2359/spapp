<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.spgroup.spapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".presentation.SPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullScreenActivity">

        <!-- HomeActivity -->
        <activity
            android:name=".presentation.activity.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ParnerDetailsActivity -->
        <activity
            android:name=".presentation.activity.PartnerDetailsActivity"
            android:screenOrientation="portrait"
            >
        </activity>

        <!--OrderSummaryActivity-->
        <activity
            android:name=".presentation.activity.OrderSummaryActivity"
            android:screenOrientation="portrait"
            >
        </activity>

    </application>

</manifest>