<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_summary_button"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_button_height"
    android:layout_alignParentBottom="true"
    android:background="@drawable/selector_btn_blue"
    android:paddingLeft="@dimen/service_item_horz_spacing"
    android:paddingRight="@dimen/service_item_horz_spacing"
    tools:ignore="MissingPrefix"
    >

    <TextView
        android:id="@+id/tv_total_count"
        style="@style/textCounterIcon.white"
        android:layout_centerVertical="true"
        android:text="1"
        />

    <TextView
        fontPath="@string/font_medium"
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/service_item_horz_spacing"
        android:layout_toRightOf="@+id/tv_total_count"
        android:text="@string/view_summary"
        android:textColor="@color/color_ui06"
        android:textSize="@dimen/text_size_button"
        />

    <TextView
        fontPath="@string/font_medium"
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:maxLines="1"
        android:text="EST: S$0.01"
        android:textColor="@color/color_ui06"
        android:layout_toRightOf="@+id/tv_summary"

        android:textSize="@dimen/text_size_counter"
        />

</RelativeLayout>