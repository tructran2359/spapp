<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/body"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grey"
        tools:text="123asdf"
        />

    <View
        style="@style/lineDividerDark"
        android:layout_marginTop="@dimen/common_vert_large"
        android:layout_marginBottom="@dimen/common_vert_large"
        />

    <TextView
        style="@style/subhead"
        android:id="@+id/tv_link_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="Feedback"
        />

    <TextView
        style="@style/body"
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="@dimen/common_horz_small"
        android:textColor="@color/color_ui01"
        android:layout_marginTop="@dimen/common_vert_medium"
        android:layout_marginBottom="@dimen/common_vert_xxxlarge"
        tools:text="email@email.com"
        />

</LinearLayout>