<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/body"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grey"
        tools:text="123asdf"
        />

    <View
        style="@style/lineDividerDark"
        android:layout_marginTop="@dimen/common_vert_large"
        android:layout_marginBottom="@dimen/common_vert_large"
        />

    <TextView
        style="@style/subhead"
        android:id="@+id/tv_link_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="Feedback"
        />

    <LinearLayout
        android:id="@+id/ll_email_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_vert_medium"
        android:layout_marginBottom="@dimen/common_vert_xxxlarge"
        >

        <ImageView
            android:layout_width="@dimen/common_icon_size_with_padding"
            android:layout_height="@dimen/common_icon_size_with_padding"
            android:src="@drawable/email"
            android:layout_marginRight="@dimen/common_vert_small"
            android:scaleType="fitXY"
            />

        <TextView
            style="@style/body"
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grey"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/common_vert_xsmall"
            android:background="@drawable/selector_grey_transparent"
            tools:text="email@email.com"
            />
        
    </LinearLayout>

</LinearLayout>