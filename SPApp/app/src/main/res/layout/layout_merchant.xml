<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/home_category_icon_size"
        android:layout_height="@dimen/home_category_icon_size"
        android:src="@drawable/logo_laundry"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        app:riv_corner_radius="@dimen/common_radius"
        />

    <LinearLayout
        android:layout_width="@dimen/merchant_label_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_horz_medium_sub"
        >

        <TextView
            style="@style/textBannerTitle"
            android:id="@+id/tv_merchant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laundry"
            />

        <TextView
            style="@style/textBannerDesc"
            android:id="@+id/tv_merchant_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presto Drycleaners"
            />

    </LinearLayout>

</RelativeLayout>