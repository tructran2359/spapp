<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.spgroup.spapp.presentation.view.TopLevelCateView
            android:id="@+id/cate_view_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.spgroup.spapp.presentation.view.TopLevelCateView
            android:id="@+id/cate_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1
"
            />

        <com.spgroup.spapp.presentation.view.TopLevelCateView
            android:id="@+id/cate_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_vert_medium"
        >

        <com.spgroup.spapp.presentation.view.TopLevelCateView
            android:id="@+id/cate_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.spgroup.spapp.presentation.view.TopLevelCateView
            android:id="@+id/cate_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <com.spgroup.spapp.presentation.view.TopLevelCateView
            android:id="@+id/cate_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

</LinearLayout>