<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui05"
    tools:context=".presentation.activity.PartnerDetailsActivity"
    tools:ignore="MissingPrefix"
    >
    
    <!--Hero Section-->
    <RelativeLayout
        android:id="@+id/rl_hero_section"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color_ui03"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_spacing_x2"
            custom:ci_width="@dimen/indicator_size"
            custom:ci_height="@dimen/indicator_size"
            custom:ci_drawable="@drawable/indicator_active"
            custom:ci_drawable_unselected="@drawable/indicator_inactive"
            custom:ci_animator="@anim/anim_indicator"
            custom:ci_animator_reverse="@anim/anim_indicator"
            />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_marginTop="@dimen/common_spacing_x3"
            android:layout_marginLeft="@dimen/common_spacing_x2"
            android:src="@drawable/arrow_left"
            />

        <TextView
            style="@style/textH1.white"
            android:id="@+id/tv_partner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuiKlean Laundry"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/iv_information"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_marginTop="@dimen/common_spacing_x3"
            android:layout_marginRight="@dimen/common_spacing_x2"
            android:layout_alignParentRight="true"
            android:src="@drawable/information"
            />

    </RelativeLayout>

    <!--Form Section-->
    <LinearLayout
        android:id="@+id/ll_forms_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_hero_section"
        android:layout_above="@+id/rl_summary_section"
        android:orientation="vertical"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:tabMode="scrollable"
            android:layout_marginLeft="@dimen/common_spacing_x2"
            android:layout_marginRight="@dimen/common_spacing_x2"
            custom:tabIndicatorColor="@color/color_ui01"
            custom:tabIndicatorHeight="@dimen/common_spacing"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_forms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
    </LinearLayout>
    
    <!--Summary Section-->
    <RelativeLayout
        android:id="@+id/rl_summary_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ui06"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/service_item_horz_spacing"
        android:paddingRight="@dimen/service_item_horz_spacing"
        android:paddingTop="@dimen/service_item_vert_spacing"
        android:paddingBottom="@dimen/service_item_vert_spacing"
        >

        <RelativeLayout
            android:id="@+id/rl_summary_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumary_height"
            android:background="@drawable/selector_btn_blue"
            android:paddingLeft="@dimen/service_item_horz_spacing"
            android:paddingRight="@dimen/service_item_horz_spacing"
            >

            <TextView
                style="@style/textCounterIcon.white"
                android:id="@+id/tv_total_count"
                android:layout_centerVertical="true"
                android:text="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_summary"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_total_count"
                android:layout_marginLeft="@dimen/service_item_horz_spacing"
                android:textColor="@color/color_ui06"
                android:textSize="@dimen/text_size_button"
                fontPath="@string/font_medium"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/color_ui06"
                android:textSize="@dimen/text_size_counter"
                android:gravity="right"
                fontPath="@string/font_medium"

                android:text="EST: S$66.00"
                />

        </RelativeLayout>

    </RelativeLayout>
    
</RelativeLayout>