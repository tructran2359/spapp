<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/color_ui01"
        app:tabIndicatorHeight="@dimen/common_spacing"
        app:tabPaddingStart="@dimen/common_horz_large"
        app:tabPaddingEnd="@dimen/common_horz_large"
        app:tabMaxWidth="10000dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_forms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>