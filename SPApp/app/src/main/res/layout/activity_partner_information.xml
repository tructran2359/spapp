<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.PartnerInformationActivity"
    >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/common_horz_large"
        android:paddingRight="@dimen/common_horz_large"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/page_top_img_width"
                android:layout_height="@dimen/page_top_img_height"
                android:src="@drawable/page_top_img"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_vert_xlarge"
                android:textSize="34sp"
                android:textColor="@color/color_ui07"
                android:lineSpacingExtra="6sp"
                fontPath="@string/font_medium"
                tools:text="QuiKlean Laundry"
                />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_vert_medium_sub"
                android:textSize="16sp"
                android:textColor="@color/color_ui02"
                android:lineSpacingExtra="8sp"
                fontPath="@string/font_medium"
                tools:text="As fresh laundry experts, we combine our expertise and passion for service to deliver a delightful laundry experience that leaves you worry-free. We are committed to ensuring that you’re clothed in freshness to soak in life’s joys everyday."
                />


            <TextView
                style="@style/textH4"
                android:id="@+id/tv_service_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_vert_large"
                tools:text="@string/service_desc_header"
                />

            <LinearLayout
                android:id="@+id/ll_service_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/common_vert_medium_sub"
                >

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/color_ui04"
                android:layout_marginTop="@dimen/partner_info_margin_vert_large"
                android:layout_marginBottom="@dimen/partner_info_margin_vert_large"
                />

            <TextView
                style="@style/textH4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bussiness_info_header"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/partner_info_margin_vert_medium"
                >

                <ImageView
                    android:layout_width="@dimen/common_icon_size_medium"
                    android:layout_height="@dimen/common_icon_size_medium"
                    android:src="@drawable/icon_phone"
                    />

                <TextView
                    style="@style/textParagraph.grey"
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/partner_info_margin_right"

                    tools:text="6342 4988"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/partner_info_margin_vert_medium"
                >

                <ImageView
                    android:layout_width="@dimen/common_icon_size_medium"
                    android:layout_height="@dimen/common_icon_size_medium"
                    android:src="@drawable/uen"
                    />

                <TextView
                    style="@style/textParagraph.grey"
                    android:id="@+id/tv_uen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/partner_info_margin_right"

                    android:text="987654321A"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/partner_info_margin_vert_medium"
                android:layout_marginBottom="@dimen/partner_info_margin_vert_large"
                >

                <ImageView
                    android:layout_width="@dimen/common_icon_size_medium"
                    android:layout_height="@dimen/common_icon_size_medium"
                    android:src="@drawable/nea"
                    />

                <TextView
                    style="@style/textParagraph.grey"
                    android:id="@+id/tv_nea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/partner_info_margin_right"

                    tools:text="987654321A"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/common_icon_size_medium"
        android:layout_height="@dimen/common_icon_size_medium"
        android:src="@drawable/ic_close_blue"
        android:layout_marginTop="@dimen/common_vert_medium"
        android:layout_marginRight="@dimen/common_vert_small"
        android:layout_gravity="right"
        />

</FrameLayout>