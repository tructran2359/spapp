<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        style="@style/textH4"
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_sum_horz_space"
        android:layout_marginTop="@dimen/order_sum_vert_space"

        android:text="Dry Cleaning"
        />

    <RelativeLayout
        android:id="@+id/rl_content_container"
        android:layout_below="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_sum_horz_space_for_icon"
        android:layout_marginRight="@dimen/order_sum_horz_space_for_icon"
        android:layout_marginTop="@dimen/common_spacing_x2"
        android:layout_marginBottom="@dimen/order_sum_vert_space"
        >

        <ImageView
            style="@style/iconWithPadding"
            android:id="@+id/iv_delete"
            android:src="@drawable/delete"
            />
        
        <TextView
            style="@style/textParagraph.grey"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_delete"
            android:layout_marginLeft="@dimen/common_spacing_x4"
            android:layout_centerVertical="true"
            
            android:text="Blouse"
            />
        
        <ImageView
            style="@style/iconWithPadding"
            android:id="@+id/tv_plus"
            android:src="@drawable/plus"
            android:layout_alignParentRight="true"
            />
        
        
        <TextView
            style="@style/textH3"
            android:id="@+id/tv_count"
            android:layout_width="@dimen/order_sum_counter_text_width"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_plus"
            android:layout_marginRight="@dimen/common_spacing_x2"
            android:gravity="center_horizontal"

            android:text="1"
            />

        <ImageView
            style="@style/iconWithPadding"
            android:id="@+id/tv_minus"
            android:src="@drawable/plus"
            android:layout_toLeftOf="@+id/tv_count"
            android:layout_marginRight="@dimen/common_spacing_x2"
            />

    </RelativeLayout>

    <View
        style="@style/lineDivider"
        android:id="@+id/v_devider"
        android:layout_below="@+id/rl_content_container"
        android:layout_marginLeft="@dimen/common_spacing_x3"
        android:layout_marginRight="@dimen/common_spacing_x3"
        />

</RelativeLayout>