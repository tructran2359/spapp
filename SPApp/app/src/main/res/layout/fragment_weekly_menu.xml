<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ui06"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            style="@style/textH2"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_horz_large"
            android:paddingRight="@dimen/common_horz_large"
            android:paddingTop="@dimen/common_vert_large"

            android:text="Menu That Feels The Soul"
            />

        <TextView
            style="@style/textParagraph.grey"
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_horz_large"
            android:paddingRight="@dimen/common_horz_large"
            android:layout_marginTop="@dimen/common_vert_medium_sub"

            android:text="At Tingkat-A-Day, we design and refresh our meal menu every single week so that you enjoy the widest variety of dishes, every single day."
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.spgroup.spapp.presentation.view.MenuView
                android:id="@+id/menu_view_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                style="@style/lineDivider"
                android:layout_marginLeft="@dimen/common_horz_medium"
                android:layout_marginRight="@dimen/common_horz_medium"
                />

            <com.spgroup.spapp.presentation.view.MenuView
                android:id="@+id/menu_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>


</ScrollView>