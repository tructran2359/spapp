    <style name="lineDividerDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:background">@color/color_ui04</item>
    </style>

    <style name="lineDividerLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_spacing_x2</item>
        <item name="android:background">@color/color_ui05</item>
    </style>

    <style name="orderSumLabel" parent="subhead.small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_vert_medium</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="textCaption">
        <item name="android:textColor">@color/color_ui02</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_caption</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="textButton">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_button</item>
        <item name="fontPath">@string/font_medium</item>
    </style>

    <style name="textAlert">
        <item name="android:textColor">@color/color_alert</item>
        <item name="android:textSize">@dimen/text_size_alert</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_alert</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <!--Other-->

    <style name="bottomButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/bottom_button_container_horz</item>
        <item name="android:paddingRight">@dimen/bottom_button_container_horz</item>
        <item name="android:paddingTop">@dimen/bottom_button_container_vert</item>
        <item name="android:paddingBottom">@dimen/bottom_button_container_vert</item>
    </style>

    <style name="iconWithPadding">
        <item name="android:layout_width">@dimen/common_icon_size_with_padding</item>
        <item name="android:layout_height">@dimen/common_icon_size_with_padding</item>
        <item name="android:padding">@dimen/common_icon_padding</item>
    </style>

    <style name="buttonShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_shadow_height</item>
        <item name="android:background">@drawable/gradient_button_shadow</item>
    </style>

    <style name="homeScreenTempButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_ui01</item>
        <item name="android:background">@drawable/bg_rec_rounded_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="textH4.blueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_button_height</item>
        <item name="android:background">@drawable/selector_btn_main</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_ui06</item>
    </style>

    <style name="actionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:background">@color/color_ui01</item>
    </style>

    <style name="validationInputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_vert_medium</item>
    </style>

    <style name="textBannerTitle">
        <item name="android:textColor">@color/color_ui01</item>
        <item name="android:textSize">@dimen/text_size_banner_title</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_banner_title</item>
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="textBannerDesc">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_banner_desc</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_banner_desc</item>
        <item name="fontPath">@string/font_light</item>
    </style>

    <style name="textMenuItem" parent="h5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/common_horz_medium</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="textMenuFooter" parent="footnote">
        <item name="android:textSize">@dimen/text_size_menu_footer</item>
        <item name="android:textColor">@color/color_ui02</item>
    </style>

    <!--VMLSINPOW-249 - UI Optimisation-->
    <style name="h1">
        <item name="android:textSize">@dimen/h1_text</item>
        <item name="android:lineSpacingExtra">@dimen/h1_line</item>
        <item name="fontPath">@string/font_medium</item>
    </style>

    <style name="h2">
        <item name="android:textSize">@dimen/h2_text</item>
        <item name="android:lineSpacingExtra">@dimen/h2_line</item>
