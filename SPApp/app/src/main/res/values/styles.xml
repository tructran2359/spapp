<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Customize here-->
    </style>

    <style name="textH1">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="textH1.white">
        <item name="android:textColor">@color/color_ui06</item>
    </style>

    <style name="textServiceItemFrom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/from</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/color_ui02</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="textServiceItemPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="fontPath">@string/font_book</item>
    </style>

</resources>
