<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Customize here-->
    </style>

    <!--Text style-->

    <style name="textH1">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontPath">@string/font_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_h1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textH2">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="fontPath">@string/font_book</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_h2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textH1.white">
        <item name="android:textColor">@color/color_ui06</item>
    </style>

    <style name="textH3">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_h3</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/font_book</item>
    </style>

    <style name="textH3.white">
        <item name="android:textColor">@color/color_ui06</item>
    </style>

    <style name="textH4">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/font_book</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_h4</item>
    </style>

    <style name="textH5">
        <item name="android:textSize">@dimen/text_size_h5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_h5</item>
        <item name="fontPath">@string/font_book</item>
    </style>

    <style name="textH6">
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/font_book</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_h6</item>
    </style>

    <style name="textParagraph">
        <item name="android:textSize">@dimen/text_size_paragraph</item>
        <item name="fontPath">@string/font_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_paragraph</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textParagraph.white">
        <item name="android:textColor">@color/color_ui06</item>
    </style>

    <style name="textParagraph.grey">
        <item name="android:textColor">@color/color_ui02</item>
    </style>

    <style name="textLink">
        <item name="android:textSize">@dimen/text_size_text_link</item>
        <item name="fontPath">@string/font_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_text_link</item>
        <item name="android:textColor">@color/color_ui01</item>
    </style>

    <style name="textServiceItemFrom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/from</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/color_ui02</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="textH6.textServiceItemPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="fontPath">@string/font_book</item>
    </style>

    <style name="textCounterIcon">
        <item name="android:layout_width">@dimen/common_icon_size</item>
        <item name="android:layout_height">@dimen/common_icon_size</item>
        <item name="android:textColor">@color/color_ui06</item>
        <item name="android:background">@drawable/bg_oval_blue</item>
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textCounterIcon.white">
        <item name="android:textColor">@color/color_ui01</item>
        <item name="android:background">@drawable/bg_oval_white</item>
    </style>

    <style name="lineDividerDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:background">@color/color_ui04</item>
    </style>

    <style name="lineDividerLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_spacing_x2</item>
        <item name="android:background">@color/color_ui05</item>
    </style>

    <style name="orderSumLabel" parent="textH5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_vert_medium</item>
    </style>

    <style name="textParagraph.grey.orderSumInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_rec_rounded_white_solid_grey_stroke</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/common_spacing_x3</item>
    </style>

    <style name="textCaption">
        <item name="android:textColor">@color/color_ui02</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_caption</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="textButton">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_button</item>
        <item name="fontPath">@string/font_medium</item>
    </style>

    <style name="textAlert">
        <item name="android:textColor">@color/color_alert</item>
        <item name="android:textSize">@dimen/text_size_alert</item>
        <item name="android:lineSpacingExtra">@dimen/line_space_alert</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <!--Other-->

    <style name="bottomButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/bottom_button_container_horz</item>
        <item name="android:paddingRight">@dimen/bottom_button_container_horz</item>
        <item name="android:paddingTop">@dimen/bottom_button_container_vert</item>
        <item name="android:paddingBottom">@dimen/bottom_button_container_vert</item>
    </style>

    <style name="iconWithPadding">
        <item name="android:layout_width">@dimen/common_icon_size_with_padding</item>
        <item name="android:layout_height">@dimen/common_icon_size_with_padding</item>
        <item name="android:padding">@dimen/common_icon_padding</item>
    </style>

    <style name="buttonShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_shadow_height</item>
        <item name="android:background">@drawable/gradient_button_shadow</item>
    </style>

    <style name="homeScreenTempButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_ui01</item>
        <item name="android:background">@drawable/bg_rec_rounded_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="textH4.blueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_button_height</item>
        <item name="android:background">@drawable/selector_btn_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_ui06</item>
    </style>

    <style name="actionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:background">@color/color_primarygradientbase</item>
    </style>

    <style name="validationInputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_vert_medium</item>
    </style>

</resources>
